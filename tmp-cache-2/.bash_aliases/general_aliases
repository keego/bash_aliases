# # #
# AWS
# # #

aws-edit-profiles() {
  edit ~/.aws/config ~/.aws/credentials
}

aws-set-profile () {
  echo "Available AWS profiles:"
  aws configure list-profiles
  echo
  echo "Which would you like to use?"
  read profile
  echo
  echo "AWS_PROFILE=$profile"
  export AWS_PROFILE="$profile"
}

aws-whoami () {
  echo $AWS_PROFILE
}
